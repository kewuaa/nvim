{
    "if": {
        "prefix": "if",
        "body": [
            "if ${1:condition} then",
            "\t$2",
            "end"
        ],
        "description": "Code snippet for the if statement."
    },
    "elif": {
        "prefix": "else if",
        "body": [
            "else if ${1:condition} then",
            "\t$2"
        ],
        "description": "Code snippet for the elif statement."
    },
    "while": {
        "prefix": "while",
        "body": [
            "while ${1:condition} do",
            "\t$2",
            "end"
        ],
        "description": "Code snippet for the while statement."
    },
    "repeat": {
        "prefix": "repeat",
        "body": [
            "repeat",
            "\t$1",
            "until ${2:condition}"
        ],
        "description": "Code snippet for the repeat statement."
    },
    "function": {
        "prefix": "function",
        "body": [
            "function$1($2)",
            "\t$3",
            "end"
        ],
        "description": "Code snippet for the function statement."
    },
    "for": {
        "prefix": "for i = 0, n do",
        "body": [
            "for ${1:i} = ${2:0}, ${3:stop} do",
            "\t$4",
            "end"
        ],
        "description": "Code snippet for the for statement."
    },
    "for/pair": {
        "prefix": "for ... in ... pairs",
        "body": [
            "for ${1:k}, ${2:v} in pairs($3) do",
            "\t$4",
            "end"
        ]
    },
    "for/ipair": {
        "prefix": "for ... in ... ipairs",
        "body": [
            "for ${1:i}, ${2:v} in ipairs($3) do",
            "\t$4",
            "end"
        ]
    }
}
